      	<option value="DC">DC</option>
      	<option value="FL">FL</option>
      	<option value="GA">GA</option>
      	<option value="HI">HI</option>
      	<option value="ID">ID</option>
      	<option value="IL">IL</option>
      	<option value="IN">IN</option>
      	<option value="IA">IA</option>
      	<option value="KS">KS</option>
      	<option value="KY">KY</option>
      	<option value="LA">LA</option>
      	<option value="ME">ME</option>
      	<option value="MD">MD</option>
      	<option value="MA">MA</option>
      	<option value="MI">MI</option>
      	<option value="MN">MN</option>
      	<option value="MS">MS</option>
      	<option value="MO">MO</option>
      	<option value="MT">MT</option>
      	<option value="NE">NE</option>
      	<option value="NV">NV</option>
      	<option value="NH">NH</option>
      	<option value="NJ">NJ</option>
      	<option value="NM">NM</option>
      	<option value="NY">NY</option>
      	<option value="NC">NC</option>
      	<option value="ND">ND</option>
      	<option value="OH">OH</option>
      	<option value="OK">OK</option>
      	<option value="OR">OR</option>
      	<option value="PA">PA</option>
      	<option value="RI">RI</option>
      	<option value="SC">SC</option>
      	<option value="SD">SD</option>
      	<option value="TN">TN</option>
      	<option value="TX">TX</option>
      	<option value="UT">UT</option>
      	<option value="VT">VT</option>
      	<option value="VA">VA</option>
      	<option value="WA">WA</option>
      	<option value="WV">WV</option>
      	<option value="WI">WI</option>
      	<option value="WY">WY</option>
      </select>
    </div>
    
    <div class="form-group">
      <label for="inputZip">Zip</label>
      <input type="text" class="form-control col-2" id="inputZip" name="zip" placeholder="Enter zip" required="true" max="10" value="{{show.zip}}">
    </div>
    
    <div class="form-group">
      <label for="inputStart">Start</label>
      <input type="time" class="form-control col-2" id="inputStart" name="start" placeholder="Enter start time" required="true" value="{{show.start}}">
    </div>
    
    <div class="form-group">
      <label for="inputEnd">End</label>
      <input type="time" class="form-control" id="inputEnd" name="end" placeholder="Enter end time" required="true" value="{{show.end}}">
    </div>
    
    <div class="form-group">
      <label for="inputRegularAdmission">Admission</label>
      <input type="text" class="form-control" id="inputRegularAdmission" name="regular_admission_fee" placeholder="Enter regular admission" required="true" value="{{show.regular_admission_fee}}">
    </div>
    
    <div class="form-group">
      <div class="form-check form-check-inline">
        <label for="earlyAdmissionYes">Early Admission?</label>
      </div>
      {{#if show.early_admission}}
        <div class="form-check form-check-inline">
        <input type="radio" class="form-check-input" id="earlyAdmissionYes" name="early_admission" onclick="displayEarlyAdmissionFields()" value="yes" checked>
        Yes
        </div>
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" id="earlyAdmissionNo" name="early_admission" onclick="displayEarlyAdmissionFields()" value="no">
          No
        </div>
      {{/if}}
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" id="earlyAdmissionYes" name="early_admission" onclick="displayEarlyAdmissionFields()" value="yes">
          Yes
        </div>
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" id="earlyAdmissionNo" name="early_admission" onclick="displayEarlyAdmissionFields()" value="no" checked>
          No
        </div>
    </div>
    
    <div id="earlyAdmissionFields" class="d-none">
      <div class="form-group">
        <label for="earlyAdmissionTime">Early Admission Time</label>
        <input type="time" class="form-control" id="earlyAdmissionTime" name="early_admission_time" value="{{show.early_admission_time}}">
      </div>
      <div class="form-group">
        <label for="inputAdmission">Early Admission Fee</label>
        <input type="text" class="form-control" id="earlyAdmissionFee" name="early_admission_fee" placeholder="Enter early admission fee" value="{{show.early_admission_fee}}">
      </div>
    </div>
    
    <div class="form-group">
      <label for="numberOfDealers">Number Of Dealers</label>
      <input type="text" class="form-control" id="numberOfDealers" name="number_of_dealers" placeholder="Enter number of dealers" value="{{show.number_of_dealers}}">
    </div>
    
    <div class="form-group">
      <label for="numberOfTables">Number Of Tables</label>
      <input type="text" class="form-control" id="numberOfTables" name="number_of_tables" placeholder="Enter regular admission" required="true"value="{{show.number_of_tables}}">
    </div>
    
    <div class="form-group">
      <label for="sizeOfTables">Size Of Tables</label>
      <input type="text" class="form-control" id="sizeOfTables" name="size_of_tables" placeholder="Enter size of tables" value="{{show.size_of_tables}}">
    </div>
    
    <div class="form-group">
      <label for="tableRent">Table Rent</label>
      <input type="text" class="form-control" id="tableRent" name="table_rent" placeholder="Enter price to rent per table" value="{{show.table_rent}}">
    </div>
  
    <div class="form-group">
      <div class="form-check form-check-inline">
        <label for="cdDealers">CD Dealers?</label>
      </div>
      {{#if show.cd_dealers}}
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="cd_dealers" value="yes" checked>
          Yes
        </div>
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="cd_dealers" value="no">
          No
        </div>
      {{else}}
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="cd_dealers" value="yes">
          Yes
        </div>
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="cd_dealers" value="no" checked>
          No
        </div>
      {{/if}}
    </div>
    
    <div class="form-group">
      <div class="form-check form-check-inline">
        <label for="fortyFiveDealers">45 Dealers?</label>
      </div>
      {{#if show.fortyfive_dealers}}
