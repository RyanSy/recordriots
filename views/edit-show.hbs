          <input type="radio" class="form-check-input" name="handicapped_access" value="no" checked>
          No
        </div>
      {{/if}}
    </div>
    
    <div class="form-group">
      <label for="inputMoreInformation">More Information</label>
      <textarea class="form-control col-6" id="inputMoreInformation" name="more_information" placeholder="Enter more information" required="true" rows="4">{{show.more_information}}</textarea>
    </div>
    
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Save</button><a class="btn btn-link" href="/my-shows">Cancel</a>
    </div>
    
  </form>
</div>

<script>
  // set selected state
  var state = document.getElementById('selectedState').value;
  console.log(state);
  
  setSelectedState(state);
  
  function setSelectedState(value) {
    var options = document.getElementsByTagName("option");
    for (var i = 0; i < options.length; i++) {
      if (options[i].value == value) {
        options[i].selected = true;
      }
    }
  }
</script>