<div class="container mt-5">
  <h5 class="mb-4">Edit Show:</h5>
  <form action="/edit-show/{{show._id}}" method="post">
    <div class="form-group">
      <label for="inputDate">Date</label>
      <input type="date" class="form-control col-md-3" id="inputDate" name="date" placeholder="Enter date" required="true" value="{{show.date}}">
    </div>
    
    <div class="form-group">
      <label for="inputName">Name</label>
      <input type="text" class="form-control col-6" id="inputName" name="name" placeholder="Enter name of show" required="true" value="{{show.name}}">
    </div>
    
    <div class="form-group">
      <label for="inputVenue">Venue</label>
      <input type="text" class="form-control col-6" id="inputVenue" name="venue" placeholder="Enter venue" required="true" value="{{show.venue}}">
    </div>
    
    <div class="form-group">
      <label for="inputAddress">Address</label>
      <input type="text" class="form-control col-6" id="inputAddress" name="address" aria-describedby="addressHelp" placeholder="Enter address" required="true" value="{{show.address}}">
    </div>
    
    <div class="form-group">
      <label for="inputCity">City</label>
      <input type="text" class="form-control col-6" id="inputCity" name="city" placeholder="Enter city" required="true" value="{{show.city}}">
    </div>
    
    <div class="form-group">
      <label for="inputState">State</label>
      <input type="hidden" id="selectedState" value="{{show.state}}">
      <select class="form-control col-1" id="inputState" name="state" placeholder="Enter state" required="true">
