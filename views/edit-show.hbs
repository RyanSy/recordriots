          <input type="radio" class="form-check-input" name="fortyfive_dealers" value="yes" checked>
          Yes
        </div>
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="fortyfive_dealers" value="no">
          No
        </div>
      {{else}}
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="fortyfive_dealers" value="yes">
          Yes
        </div>
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="fortyfive_dealers" value="no"checked>
          No
        </div>
      {{/if}}
    </div>
    
    <div class="form-group">
      <div class="form-check form-check-inline">
        <label for="sevetyEightDealers">78 Dealers?</label>
      </div>
      {{#if show.seventyeight_dealers}}
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="seventyeight_dealers" value="yes" checked>
          Yes
        </div>
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="seventyeight_dealers" value="no">
          No
        </div>
      {{else}}
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="seventyeight_dealers" value="yes">
          Yes
        </div>
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="seventyeight_dealers" value="no" checked>
          No
        </div>
      {{/if}}
    </div>
    
    <div class="form-group">
      <div class="form-check form-check-inline">
        <label for="foodDrink">Food/Drink?</label>
      </div>
      {{#if show.food_drink}}
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="food_drink" value="yes" checked>
          Yes
        </div>
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="food_drink" value="no">
          No
        </div>
      {{else}}
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="food_drink" value="yes">
          Yes
        </div>
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="food_drink" value="no" checked>
          No
        </div>
      {{/if}}
    </div>
    
    <div class="form-group">
      <div class="form-check form-check-inline">
        <label for="handicappedAccess">Handicapped Access?</label>
      </div>
      {{#if show.handicapped_access}}
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="handicapped_access" value="yes" checked>
          Yes
        </div>
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="handicapped_access" value="no">
          No
        </div>
      {{else}}
        <div class="form-check form-check-inline">
          <input type="radio" class="form-check-input" name="handicapped_access" value="yes">
          Yes
